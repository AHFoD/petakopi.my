<% if coffee_shop.public_send(link).present? %>
  <%= link_to coffee_shop.public_send(link), target: "_blank", class: local_assigns[:type] && type == "button" ? "inline-flex items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brown-500 lg:w-fit whitespace-nowrap" : nil, data: { controller: "tracker", tracker_id_value: coffee_shop.id, tracker_url_value: coffee_shop.public_send(link), tracker_type_value: link.to_s.remove("_url"), action: "click->tracker#track" } do %>
    <%= render "components/icons/#{link.to_s.remove("_url").to_sym}" %>
    <% if local_assigns[:type] && type == "button" %>
      <%= link.to_s.titleize.gsub("Url", "").strip %>
    <% end %>
  <% end %>
<% end %>
