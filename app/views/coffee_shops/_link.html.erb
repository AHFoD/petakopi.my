<% if coffee_shop.public_send(link).present? %>
  <%= link_to coffee_shop.public_send(link), target: "_blank" do %>
    <% if local_assigns[:type] && type == "button" %>
      <button type="button" class="inline-flex items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brown-500">
        <%= render "components/icons/#{link.to_s.remove("_url").to_sym}" %>
        <%= link.to_s.titleize.gsub("Url", "").strip %>
      </button>
    <% else %>
      <%= render "components/icons/#{link.to_s.remove("_url").to_sym}" %>
    <% end %>
  <% end %>
<% end %>
